---
import Time from "@/icons/Time.astro";
import { type Song } from "@/lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="tablaPlaylist text-left min-w-full divide-y-2 divide-gray-500/50">
  <thead>
    <tr class="cabeceraTabla text-zinc-400 text-xs">
      <th class="celdaEncabezado px-4 py-2 font-light">#</th>
      <th class="celdaEncabezado px-4 py-2 font-light">Título</th>
      <th class="celdaEncabezado px-4 py-2 font-light">Álbum</th>
      <th class="celdaEncabezado px-4 py-2 font-light"><Time /></th>
    </tr>
  </thead>

  <tbody>
    <tr class="h-[16px]"></tr>
    {
      songs.map((song, index) => (
        <tr class="filaCancion border-spacing-0 text-gray-300 text-xs font-light hover:bg-white/10 overflow-hidden transition duration-300">
          <td class="celdaCancion px-4 py-2 rounded-tl-lg rounded-bl-lg w-5">{index + 1}</td>
          <td class="celdaCancion px-4 py-2 flex gap-3">
            <picture class="imagenCancion">
              <img src={song.image} alt={song.title} class="w-11 h-11" />
            </picture>
            <div class="informacionCancion flex flex-col">
              <h3 class="tituloCancion text-white text-sm font-normal">{song.title}</h3>
              <span class="artistasCancion text-xs">{song.artists.join(", ")}</span>
            </div>
          </td>
          <td class="celdaCancion px-4 py-2">{song.album}</td>
          <td class="celdaCancion px-4 py-2 rounded-tr-lg rounded-br-lg">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>

